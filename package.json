{
  "engines": {
    "node": "16.x"
  },
  "name": "relyn-server",
  "version": "0.1.0",
  "description": "Relyn App project (experimental)",
  "main": "index.ts",
  "scripts": {
    "dev:server": "nodemon ./src/index.ts --ignore ./client",
    "dev:client": "npm start --prefix client",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:server": "rimraf ./build && tsc",
    "build:client": "npm run build --prefix client",
    "build": "concurrently \"npm run build:server\" \"npm run build:client\"",
    "start:server": "node ./build/index.js",
    "start:client": "npm run prod --prefix client",
    "start": "npm run start:server",
    "heroku-postbuild": "npm install --prefix client && npm run build"
  },
  "author": "Luis Portillo",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.0.1",
    "mongoose": "^5.13.4",
    "morgan": "^1.10.0",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.43",
    "@types/cors": "^2.8.12",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/morgan": "^1.9.3",
    "@types/validator": "^13.6.3",
    "concurrently": "^6.3.0",
    "nodemon": "^2.0.14",
    "rimraf": "^2.7.1",
    "ts-node": "^10.3.1",
    "typescript": "^4.3.5"
  }
}
