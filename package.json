{
  "engines": {
    "node": "16.x"
  },
  "name": "relyn-server",
  "version": "0.1.0",
  "description": "Relyn App project (experimental)",
  "main": "index.ts",
  "scripts": {
    "format": "prettier --write .",
    "dev:server": "nodemon ./src/index.ts --ignore ./client",
    "dev:client": "npm start --prefix client",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:server": "rimraf ./build && tsc",
    "build:client": "npm run build --prefix client",
    "build": "concurrently \"npm run build:server\" \"npm run build:client\"",
    "start:server": "node ./build/index.js",
    "start:client": "npm run prod --prefix client",
    "start": "npm run start:server",
    "heroku-postbuild": "npm install --prefix client && npm run build"
  },
  "author": "Luis Portillo",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "express": "^4.18.1",
    "express-validator": "^6.14.1",
    "helmet": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.6.0",
    "mongoose": "^6.3.4",
    "rate-limiter-flexible": "^2.3.7",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cookie-session": "^2.0.44",
    "@types/cors": "^2.8.12",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/validator": "^13.7.2",
    "concurrently": "^7.2.1",
    "dotenv": "^16.0.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  }
}
